                                    <script>
                                        document.addEventListener('DOMContentLoaded', function () {
                                            // Target the form and add an event listener for form submission
                                            const form = document.getElementById('addressForm');
                                            form.addEventListener('submit', function (event) {
                                                // Prevent the default form submission
                                                event.preventDefault();
                                    
                                                // Reset previous error messages
                                                resetErrorMessages();
                                    
                                                // Validate each field
                                                const isValid = validateForm();
                                    
                                                // If the form is valid, submit it; otherwise, show error messages
                                                if (isValid) {
                                                    form.submit();
                                                }
                                            });
                                    
                                            function resetErrorMessages() {
                                                // Reset all error messages to empty
                                                const errorElements = document.querySelectorAll('.error-message');
                                                errorElements.forEach(function (element) {
                                                    element.textContent = '';
                                                });
                                            }
                                    
                                            function validateForm() {
                                                // Add your validation logic for each field
                                                let isValid = true;
                                    
                                                // Validate Name
                                                isValid = validateField('name', 'name-error', 'Name is required') && isValid;
                                    
                                                // Validate Mobile
                                                isValid = validateField('mobile', 'mobile-error', 'Mobile is required and should be 10 digits', /^[0-9]{10}$/) && isValid;
                                    
                                                // Validate Street
                                                isValid = validateField('street', 'street-error', 'Street is required') && isValid;
                                    
                                                // Validate Address
                                                isValid = validateField('address', 'address-error', 'Address is required') && isValid;
                                    
                                                // Validate City
                                                isValid = validateField('city', 'city-error', 'City is required') && isValid;
                                    
                                                // Validate Country
                                                isValid = validateField('country', 'country-error', 'Country is required') && isValid;
                                    
                                                // Validate State
                                                isValid = validateField('state', 'state-error', 'State is required') && isValid;
                                    
                                                // Validate District
                                                isValid = validateField('district', 'district-error', 'District is required') && isValid;
                                    
                                                // Validate Pincode
                                                isValid = validateField('pincode', 'pincode-error', 'Pincode is required and should be 6 digits', /^[0-9]{6}$/) && isValid;
                                    
                                                return isValid;
                                            }
                                    
                                            function validateField(fieldName, errorId, errorMessage, regex) {
                                                const input = document.getElementsByName(fieldName)[0];
                                                const errorElement = document.getElementById(errorId);
                                    
                                                if (!input.value.trim()) {
                                                    errorElement.textContent = errorMessage;
                                                    return false;
                                                }
                                    
                                                if (regex && !regex.test(input.value.trim())) {
                                                    errorElement.textContent = errorMessage;
                                                    return false;
                                                }
                                    
                                                return true;
                                            }
                                        });
