<%- include('../layouts/header') %>

<div class="pt-5">
    <div class="form-box">
        <div class="form-tab">
            <h3>Log In</h3>
            <div class="tab-content" id="tab-content-5">
                <div class="tab-pane fade show active" id="signin" role="tabpanel" aria-labelledby="signin-tab">
                    <form id="loginForm" action="/login" method="post" onsubmit="return validateLoginForm()">
                        <div class="form-group">
                            <label for="singin-email">Email address *</label>
                            <input type="email" class="form-control" id="singin-email" name="email" >
                            <small id="emailError" style="color: red;"></small>
                        </div><!-- End .form-group -->

                        <div class="form-group">
                            <label for="singin-password">Password *</label>
                            <input type="password" class="form-control" id="singin-password" name="password" >
                            <small id="passwordError" style="color: red;"></small>
                        </div><!-- End .form-group -->

                        <div>
                            <% if (typeof message !== 'undefined') { %>
                                <p style="color: green;">
                                    <%= message %>
                                </p>
                            <% } %>
                            <% if (typeof err !== 'undefined') { %>
                                <p style="color: rgb(255, 0, 0);">
                                    <%= err %>
                                </p>
                            <% } %>
                        </div>

                        <div class="form-footer">
                            <button type="submit" class="btn btn-outline-primary-2">
                                <span>LOG IN</span>
                                <i class="icon-long-arrow-right"></i>
                            </button>
                            <a href="/forgot-password" class="forgot-link">Forgot Your Password?</a>
                        </div><!-- End .form-footer -->
                        <a href="/register" class="forgot-link">Signup?</a>
                        <div>
                            
                        </div>
                    </form>
                </div><!-- End .tab-content -->
            </div><!-- End .form-tab -->
        </div><!-- End .form-box -->
    </div><!-- End .modal-body -->
</div><!-- End .modal-content -->
</div><!-- End .modal-dialog -->
</div><!-- End .modal -->

<script>
    function validateLoginForm() {
        var email = document.getElementById('singin-email').value;
        var password = document.getElementById('singin-password').value;

        // Clear previous errors
        document.getElementById('emailError').innerHTML = '';
        document.getElementById('passwordError').innerHTML = '';

        var hasErrors = false;

        // Add your validation logic here
        if (!email.trim()) {
            document.getElementById('emailError').innerHTML = 'Please enter your email.';
            hasErrors = true;
        }

        if (!password.trim()) {
            document.getElementById('passwordError').innerHTML = 'Please enter your password.';
            hasErrors = true;
        }

        // Add more validation rules as needed

        return !hasErrors; // Form will be submitted if validation passes
    }
</script>

<%- include('../layouts/footer') %>
