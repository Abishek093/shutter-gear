                  setError('categoryError', 'Category is required');
                  event.preventDefault();
              }
  
              if (!validateInput(brand)) {
                  setError('brandError', 'Brand is required');
                  event.preventDefault();
              }
  
              if (!validateInput(model)) {
                  setError('modelError', 'Model is required');
                  event.preventDefault();
              }
  
              if (!validatePrice(regular_price)) {
                  setError('regular_priceError', 'Regular Price should be a non-negative number');
                  event.preventDefault();
              }
  
              if (!validatePrice(sales_price)) {
                  setError('sales_priceError', 'Sales Price should be a non-negative number');
                  event.preventDefault();
              }
  
              if (!validateQuantity(quantity)) {
                  setError('quantityError', 'Quantity should be a non-negative integer');
                  event.preventDefault();
              }
  
              if (!validateInput(description)) {
                  setError('descriptionError', 'Description is required');
                  event.preventDefault();
              }
          });
  
          function resetErrorMessages() {
              const errorElements = document.querySelectorAll('.text-danger');
              errorElements.forEach(element => {
                  element.textContent = '';
              });
          }
  
          function setError(id, message) {
              const errorElement = document.getElementById(id);
              errorElement.textContent = message;
          }
  
          function validateInput(input) {
              return input.value.trim() !== '';
          }
  
          function validatePrice(input) {
              const price = parseFloat(input.value);
              return !isNaN(price) && price >= 0;
          }
  
          function validateQuantity(input) {
              const quantity = parseInt(input.value, 10);
              return !isNaN(quantity) && quantity >= 0;
          }
      });
